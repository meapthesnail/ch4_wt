%h2 Details about #{@movie.title}

%ul#details
    %li
        Rating:
        = @movie.rating
    %li
        Released on:
        = @movie.release_date.strftime("%B %d, %Y")
        
%h3 Description:

%p#description= @movie.description

= link_to 'Edit info', edit_movie_path(@movie)
%br
= link_to 'Delete movie', movie_path(@movie), :method => :delete, data: {:confirm => "Do you really want to delete the movie?  This action cannot be undone."}
%br
= link_to 'Back to movie list', movies_path